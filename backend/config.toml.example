# DragonOS CI Dashboard 配置文件示例
# 复制此文件为 config.toml 并根据实际情况修改配置

# 数据库配置
[database]
host = "localhost"
port = 3306
user = "root"
password = "rootpassword"
name = "dragonos_ci"
charset = "utf8mb4"

# 服务器配置
[server]
host = "0.0.0.0"
port = 8080
api_prefix = "/api/v1"

# 文件存储配置
[storage]
# 文件存储路径（相对路径或绝对路径）
path = "./data/uploads"
# 最大文件大小（字节），默认 100MB
max_file_size = 104857600

# JWT 配置
[jwt]
# JWT 密钥（生产环境请务必修改为强密钥）
secret = "change-me-in-production"
# JWT 过期时间（小时）
expire_hours = 24

# API Key 配置
[api_key]
# API Key 哈希盐值（生产环境请务必修改）
hash_salt = "change-me-in-production"

# 日志配置
[log]
# 日志级别: debug, info, warn, error
level = "info"
# 日志格式: json, text
format = "json"
# 日志文件路径（可选，如果设置则同时输出到 stdout 和文件，留空则只输出到 stdout）
# file_path = "./data/logs/app.log"

# CORS 配置
[cors]
# 允许的源（多个用逗号分隔）
allow_origins = [
  "http://localhost:3000",
  "http://localhost:5173"
]

